<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet-mapping>
        <servlet-name>InscriptionController</servlet-name>
        <url-pattern>/InscriptionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConnexionController</servlet-name>
        <url-pattern>/ConnexionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeconnexionController</servlet-name>
        <url-pattern>/DeconnexionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifierUtilisateurController</servlet-name>
        <url-pattern>/ModifierUtilisateurController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangementMotDePasseController</servlet-name>
        <url-pattern>/ChangementMotDePasseController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChallengeController</servlet-name>
        <url-pattern>/ChallengeController</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>InscriptionController</servlet-name>
        <servlet-class>com.connita.controller.InscriptionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConnexionController</servlet-name>
        <servlet-class>com.connita.controller.ConnexionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeconnexionController</servlet-name>
        <servlet-class>com.connita.controller.DeconnexionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifierUtilisateurController</servlet-name>
        <servlet-class>com.connita.controller.ModifierUtilisateurController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangementMotDePasseController</servlet-name>
        <servlet-class>com.connita.controller.ChangementMotDePasseController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChallengeController</servlet-name>
        <servlet-class>com.connita.controller.ChallengeController</servlet-class>
    </servlet>
</web-app>
